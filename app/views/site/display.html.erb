<canvas id="canvas"></canvas>

<script>

  $(document).on('ready', function(){

    window.width = $(window).width();
    window.height = $(window).height();

    // initialize canvas
    var canvas = document.getElementById('canvas');
    canvas.width = width;
    canvas.height = height;
    window.c = canvas.getContext("2d");

    // temporary variables for input visualization
    window.circleHeight = height / 6;
    window.lightWidth = width / 2 - 350;
    window.temperatureWidth = width / 2;
    window.soundWidth = width / 2 + 350;

    // run core functions
    initializeCircularBuffers(30);
    startAjaxCallsForSensorInputs();    

  });

</script>